@model Presentation.ViewModels.Branch.EditBranchViewModel

@{
  ViewBag.Title = "Editar Unidade";
}

<div class="x_panel">
  <div class="x_title">
    <h2>
        Editar Unidade
    </h2>
    
    <div class="clearfix"></div>
  </div>
  <div class="x_content"> 
    <form method="post" asp-controller="Branches" and asp-action="Edit">  
      
      <div class="form-group">
        <div class="row">
          <label asp-for="Name" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <div class="row">
          <label asp-for="Cnpj" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input asp-for="Cnpj" class="form-control" />
            <span asp-validation-for="Cnpj" class="text-danger"></span>
          </div>
        </div>
      </div>

      <!-- Custom Erros -->
      <div class="form-group" style="display:@(string.IsNullOrWhiteSpace(ViewBag.CustomErrors) ? "none" : "block")">
        <div class="row">
          <div class="col-md-offset-2 col-md-10">
            <span class="text-danger"> @ViewBag.CustomErrors </span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Atualizar" class="btn btn-success" />
          </div>
        </div>
      </div>
    </form>
  </div>
</div>