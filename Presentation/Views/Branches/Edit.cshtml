@model Presentation.ViewModels.Branch.EditBranchViewModel

@{
  ViewBag.Title = "Editar Unidade";
}

<div class="x_panel">
  <div class="row">
    <h5>
        Editar Unidade
    </h5>
  </div>
  <div class="row"> 
    <form method="post" asp-controller="Branches" and asp-action="Edit">  
      
      <div class="form-group">
        <div class="row">
          <label asp-for="Name" class="col m2 control-label"></label>
          <div class="col m6">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <div class="row">
          <label asp-for="Cnpj" class="col m2 control-label"></label>
          <div class="col m6">
            <input asp-for="Cnpj" class="form-control" ng-model="initializedCnpj" ui-br-cnpj-mask />
            <span asp-validation-for="Cnpj" class="text-danger"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="offset-m2 col m10">
            <input type="submit" value="Atualizar" class="btn btn-success" />
          </div>
        </div>
      </div>
    </form>
  </div>
</div>