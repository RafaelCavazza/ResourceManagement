@model Presentation.ViewModels.Loan.CreateLoanViewModel

<div class="x_panel">
  <div class="row">
    <h5>
        Cadastrar Novo Empr√©stimo
    </h5>
  </div>
  <div class="row"> 
    <form method="post" asp-controller="Loans" and asp-action="Create">  
      
      <div class="form-group">
				<div class="row">
					<label asp-for="ItemId" class="col m2 control-label"></label>
					<div class="col m6">
            @{
              var items = Model.Items.Select(p=> new { p.Id, Name = p.Product.Name + " - " + p.Patrimonio });
              var itemSelectList = new SelectList(items, "Id", "Name");
            }
            <select class="form-control" asp-for="ItemId" asp-items="@itemSelectList"></select>
						<span asp-validation-for="ItemId" class="text-danger"></span>
					</div>
				</div>
			</div>

      <div class="form-group">
				<div class="row">
					<label asp-for="EmployeeId" class="col m2 control-label"></label>
					<div class="col m6">
            <select class="form-control" asp-for="EmployeeId" asp-items="@(new SelectList(Model.Employees,"Id","Name") )"></select>
						<span asp-validation-for="EmployeeId" class="text-danger"></span>
					</div>
				</div>
			</div>

      <div class="form-group">
        <div class="row">
          <label asp-for="StartDate" class="col m2 control-label"></label>
          <div class="col m6">
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="EndDate" class="col m2 control-label"></label>
          <div class="col m6">
            <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <div class="row">
          <div class="offset-m2 col m10">
            <input type="submit" value="Cadastrar" class="btn btn-success" />
          </div>
        </div>
      </div>

    </form>
  </div>
</div>