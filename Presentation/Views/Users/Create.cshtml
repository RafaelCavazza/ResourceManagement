@model Presentation.ViewModels.User.CreateUserViewModel

@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="x_panel">
  <div class="x_title">
    <h2>
      Criar Usuário
    </h2>

    <div class="clearfix"></div>
  </div>
  <div class="x_content"> 
    <form method="post" asp-controller="Users" and asp-action="Create">
    
      <div class="form-group">
        <div class="row">
          <label class="col-md-6 control-label" style="padding-top:15px">
            <p>
              <span class="text-warning">
                ATENÇÃO: Os dados do usuário serão derivados do Funcionário vinculado.
              </span>
            </p>
          </label>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="Employee" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <select class="form-control" asp-for="EmployeeId" asp-items="@Model.Employee"></select>
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
          </div>
        </div>
      </div>

      <!-- Custom Erros -->
      <div class="form-group" style="display:@(string.IsNullOrWhiteSpace(ViewBag.CustomErrors) ? "none" : "block")">
        <div class="row">
          <div class="col-md-offset-2 col-md-10">
            <span class="text-danger"> @ViewBag.CustomErrors </span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cadastrar" class="btn btn-success" />
          </div>
        </div>
      </div>
    </form>
  </div>
</div>