@model Presentation.ViewModels.User.CreateUserViewModel

@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
  <div class="row">
    <h5>
      Criar Usuário
    </h5>
  </div>
    <form method="post" asp-controller="Users" and asp-action="Create">
      <div class="form-group">
        <div class="row">
          <label class="col m6 control-label">
            <p>
              <span class="text-warning">
                ATENÇÃO: Os dados do usuário serão derivados do Funcionário vinculado.
              </span>
            </p>
          </label>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="Employee" class="col m2 control-label"></label>
          <div class="col m6">
            <select class="form-control" asp-for="EmployeeId" asp-items="@Model.Employee"></select>
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="offset-m2 col m10">
            <input type="submit" value="Cadastrar" class="btn btn-success" />
          </div>
        </div>
      </div>
    </form>
</div>