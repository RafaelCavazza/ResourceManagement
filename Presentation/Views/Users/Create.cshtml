@model Presentation.ViewModels.User.CreateUserViewModel

@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>  
  
  <h2> 
      Criar Novo Usu√°rio para o Sistema 
  </h2>

  <form method="post" asp-controller="Users" and asp-action="Create">
    
    <div class="form-group">
      <div class="row">
        <label asp-for="UserName" class="col-md-2 control-label"></label>
        <div class="col-md-6">
          <input asp-for="UserName" class="form-control" />
          <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
      </div>
    </div>


    <div class="form-group">
      <div class="row">
        <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
        <div class="col-md-6">
          <input asp-for="PhoneNumber" class="form-control" />
          <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <label asp-for="Password" class="col-md-2 control-label"></label>
        <div class="col-md-6">
          <input asp-for="Password" class="form-control" />
          <span asp-validation-for="Password" class="text-danger"></span>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <label asp-for="ConfirmPassword" class="col-md-2 control-label"></label>
        <div class="col-md-6">
          <input asp-for="ConfirmPassword" class="form-control" />
          <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <label asp-for="Employee" class="col-md-2 control-label"></label>
        <div class="col-md-6">
          <select class="form-control" asp-for="EmployeeId" asp-items="@Model.Employee"></select>
          <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
      </div>
    </div>


    <!-- Custom Erros -->
    <div class="form-group" style="display:@(string.IsNullOrWhiteSpace(ViewBag.CustomErrors) ? "none" : "block")">
      <div class="row">
        <div class="col-md-offset-2 col-md-10">
          <span class="text-danger"> @ViewBag.CustomErrors </span>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-md-offset-2 col-md-10">
          <input type="submit" value="Cadastrar" class="btn btn-success" />
        </div>
      </div>
    </div>

  </form>
</div>