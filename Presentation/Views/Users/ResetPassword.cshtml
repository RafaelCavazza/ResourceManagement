@model Presentation.ViewModels.User.ResetPasswordUserViewModel
@{
    Layout = "";
    ViewBag.Title = "Alterar Senha";
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Resource Manager</title>
    <environment names="Development,Staging,Production">
        <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
        <link href="/lib/nprogress/nprogress.css" rel="stylesheet">
        <link href="/lib/animate.css/animate.min.css" rel="stylesheet">
    </environment>
    <!-- Custom Theme Style -->
    <link href="/css/custom.min.css" rel="stylesheet">
</head>
<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form asp-action="ResetPassword" method="post">
                        <h1>Alterar Senha</h1>
                        <div>
                            <input asp-for="Email" type="text" class="form-control" placeholder="Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div>
                            <input asp-for="Password" class="form-control" placeholder="Senha" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar Senha" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div>
                            <span asp-validation-for="CustomErros" class="text-danger"></span>
                        </div>

                        <div style="display:none">
                            <input asp-for="ResetPasswordToken" type="text" />
                        </div>
                        
                        <div>
                            <button type="submit" class="btn btn-default">Alterar</button>
                        </div>

                        <div class="separator">
                            <div>
                                <h1><i class="fa fa-th-large"></i> Resource Manager</h1>
                                <p>©2016 All Rights Reserved. Privacy and Terms</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</body>
</html>
