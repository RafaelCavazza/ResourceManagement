@model Presentation.ViewModels.Product.EditProductViewModel

@{
  ViewBag.Title = "Editar ";
}

<div class="x_panel">
  <div class="row">
    <h5>
        Editar Produto 
    </h5>
  </div>
  <div class="row"> 
    <form method="post" asp-controller="Products" and asp-action="Edit">  
      
      <div class="form-group">
        <div class="row">
          <label asp-for="Name" class="col m2 control-label"></label>
          <div class="col m6">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="Description" class="col m2 control-label"></label>
          <div class="col m6">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="ProductDepreciationTimeInMonths" class="col m2 control-label"></label>
          <div class="col m6">
            <input asp-for="ProductDepreciationTimeInMonths" class="form-control" />
            <span asp-validation-for="ProductDepreciationTimeInMonths" class="text-danger"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="offset-m2 col m10">
            <input type="submit" value="Atualizar" class="btn btn-success" />
          </div>
        </div>
      </div>

    </form>
  </div>

</div>