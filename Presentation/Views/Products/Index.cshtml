@using Domain.Entities 
@model IEnumerable<Product>
@{ ViewBag.Title = "Produtos"; }
	<div class="container">
		<div class="row">
			<h5>
				Produtos
			</h5>
			<a class="waves-effect waves-light btn" asp-controller="Products" asp-action="Create">
				<i class="fa fa-plus" aria-hidden="true">
					Novo Produto
				</i>
			</a>
		</div>

		<div class="row">
			<table class="bordered">
				<thead>
					<tr>
						<th>Nome</th>
						<th>Descrição</th>
						<th>Data de Criação</th>
						<th>Data de Modificação</th>
						<th>Ações</th>
					</tr>
				</thead>
				<tbody>
					@foreach(var product in Model) {
					<tr>
						<td>@product.Name</td>
						<td>@product.Description</td>
						<td>@product.CreatedOn.ToString("dd/MM/yyyy HH:mm:ss")</td>
						<td>@product.ModifiedOn.ToString("dd/MM/yyyy HH:mm:ss")</td>
						<td>
							<i class="fa fa-pencil" aria-hidden="true">
								<a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">Editar</a>
							</i>
							<i class="fa fa-info" aria-hidden="true">
								<a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">Detalhes</a>
							</i>
						</td>
					</tr>
					}
				</tbody>
			</table>
			<div class="center-align">
				<pager />
			</div>
		</div>
	</div>