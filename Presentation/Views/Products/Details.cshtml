@model Presentation.ViewModels.Product.ProductViewModel

@{
  ViewBag.Title = "Detalhes do Produto";
}

<div class="col-xs-12">
  
  <div class="x_panel">
    <div class="x_title">
      <h2>
        Detalhes do Produto: @Model.Name 
      </h2>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">

      <div class="form-group">
        <div class="row">
          <label asp-for="Name" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input asp-for="Name" class="form-control" disabled="disabled"/>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <div class="row">
          <label asp-for="Description" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input asp-for="Description" class="form-control" disabled="disabled"/>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="ProductDepreciationTimeInMonths" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input asp-for="ProductDepreciationTimeInMonths" class="form-control" disabled="disabled"/>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="CreatedOn" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input value="@Model.CreatedOn.ToString("dd/MM/yyyy HH:mm:ss")" class="form-control" disabled="disabled" />
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="ModifiedOn" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input value="@Model.ModifiedOn.ToString("dd/MM/yyyy HH:mm:ss")" class="form-control" disabled="disabled" />
          </div>
        </div>
      </div>

    </div>
  </div>
</div>