@model Presentation.ViewModels.Employee.CreateEmployeeViewModel

@{
  ViewBag.Title = "Criar Novo Funcionário";
}

<div class="container">
  <div class="row">
    <h5>
        Cadastrar Novo Funcionário 
    </h5>
  </div>
  <div class="row"> 
    <form method="post" asp-controller="Employees" and asp-action="Create">  
      <div class="form-group">
        <div class="row">
          <label asp-for="Name" class="col m2 control-label"></label>
          <div class="col m6">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <div class="row">
          <label asp-for="Cpf" class="col m2 control-label"></label>
          <div class="col m6">
            <input asp-for="Cpf" class="form-control" ng-model="initializedCpf" ui-br-cpf-mask />
            <span asp-validation-for="Cpf" class="text-danger"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="Identifier" class="col m2 control-label"></label>
          <div class="col m6">
            <input asp-for="Identifier" class="form-control" />
            <span asp-validation-for="Identifier" class="text-danger"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="Email" class="col m2 control-label"></label>
          <div class="col m6">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="AdmissionDate" class="col m2 control-label"></label>
          <div class="col m6">
            <input asp-for="AdmissionDate" class="form-control" />
            <span asp-validation-for="AdmissionDate" class="text-danger"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="Branch" class="col m2 control-label"></label>
          <div class="col m6">
            <select class="form-control" asp-for="BranchId" asp-items="@Model.Branch"></select>
            <span asp-validation-for="BranchId" class="text-danger"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="offset-m2 col m10">
            <span asp-validation-for="CustomErrors" class="text-danger"></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="offset-m2 col m10">
            <input type="submit" value="Cadastrar" class="btn btn-success" />
          </div>
        </div>
      </div>
    </form>
  </div>
</div>