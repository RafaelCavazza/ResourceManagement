@model Presentation.ViewModels.Employee.DetailsEmployeeViewModel


<div class="col-md-6 col-xs-12"> 
  <div class="x_panel">
    <div class="x_title">
      <h2>
        Detalhes do o Funcionário: @Model.Name 
      </h2>
      <div class="clearfix"></div>
    </div>
    <div class="x_content"> 
      <div class="form-group">
        <div class="row">
          <label asp-for="Name" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input asp-for="Name" class="form-control" disabled="disabled"/>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <div class="row">
          <label asp-for="Cpf" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input asp-for="Cpf" class="form-control" disabled="disabled"/>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="Identifier" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input asp-for="Identifier" class="form-control" disabled="disabled"/>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="Email" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input asp-for="Email" class="form-control" disabled="disabled"/>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="AdmissionDate" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input value="@Model.AdmissionDate.ToString("dd/MM/yyyy")" class="form-control" disabled="disabled" />
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="CreatedOn" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input value="@Model.CreatedOn.ToString("dd/MM/yyyy hh:mm:ss")" class="form-control" disabled="disabled" />
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="ModifiedOn" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input value="@Model.ModifiedOn.ToString("dd/MM/yyyy hh:mm:ss")" class="form-control" disabled="disabled" />
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="Active" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input value="@(Model.Active ? "Ativo" : "Inativo")" class="form-control" disabled="disabled" /> 
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label asp-for="Branch" class="col-md-2 control-label"></label>
          <div class="col-md-6">
            <input asp-for="Branch" class="form-control" disabled="disabled" />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="col-md-6 col-xs-12"> 
  <div class="x_panel">
    <div class="x_title">
      <h2>
        Ações:
      </h2>
      <div class="clearfix"></div>
    </div>
    <div class="x_content"> 
      <div class="form-group">
        <div class="row">
          <label class="col-md-2 control-label"> Alterar Status? </label>
          <div class="col-md-6">
            @{
                if(Model.Active)
                {
                  <i class="fa fa-ban" aria-hidden="true">
                    <a asp-controller="Employees" onclick="return confirm('Confirma desabilitar o registro?');" asp-action="Disable" asp-route-id="@Model.Id">Desabilitar</a>
                  </i> 
                }
                else
                {
                  <i class="fa fa-history" aria-hidden="true">
                    <a asp-controller="Employees" asp-action="Enable" asp-route-id="@Model.Id">Habilitar</a>
                  </i>
                }
            } 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>