@model Presentation.ViewModels.Employee.ImportEmployeeViewModel

@{
    ViewBag.Title = "Importar Funcionários";
}

<div class="x_panel">
  <div class="row">
    <h5>
        Importar Funcionários
    </h5>
  </div>
  <div class="row"> 
  <form asp-antiforgery="true" method="post" asp-controller="Employees" asp-action="Import" enctype="multipart/form-data">  

      <div class="form-group">
        <div class="row">
          <label asp-for="FileToImport" class="col m2 control-label"></label>
          <div class="col m6">
            <input asp-for="FileToImport" class="form-control"/>
            <span asp-validation-for="FileToImport" class="text-danger"></span>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <div class="row">
          <div class="offset-m2 col m10">
            <p>
              O arquivo a deve estar no formato csv ou txt separado por ';' ou ','
            </p>
            <p>
              Clique <a href="/Files/Exemplo_Importacao_funcionarios.csv"> <strong> aqui </strong> 
              <i class="fa fa-link" aria-hidden="true"></i> </a> para baixar o modelo de arquivo para importação.
            </p>
            <p>
              <strong> ATENÇÃO </strong> o arquivo não deve conter o <b> <i> cabeçalho </i> </b> para a importação.
            </p>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="offset-m2 col m10">
            <input type="submit" value="Importar" class="btn btn-success" />
          </div>
        </div>
      </div>

    </form>
  </div>
</div>