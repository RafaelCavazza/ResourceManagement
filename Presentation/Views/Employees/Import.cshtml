@{
    ViewBag.Title = "Importar Funcionários";
}

@model Presentation.ViewModels.Employee.EditEmployeeViewModel

<div>  
  
  <h2> 
      Editando o usuário: @Model.Name
  </h2>

  <form method="post" asp-controller="Employees" and asp-action="Edit">
    
    <div class="form-group">
      <div class="row">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-6">
          <input asp-for="Name" class="form-control" />
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>
      </div>
    </div>

    <!-- Custom Erros -->
    <div class="form-group" style="display:@(string.IsNullOrWhiteSpace(ViewBag.CustomErrors) ? "none" : "block")">
      <div class="row">
        <div class="col-md-offset-2 col-md-10">
          <span class="text-danger"> @ViewBag.CustomErrors </span>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-md-offset-2 col-md-1">
          <input type="submit" value="Salvar" class="btn btn-success" />
        </div>
      </div>
    </div>    
  </form>

</div>