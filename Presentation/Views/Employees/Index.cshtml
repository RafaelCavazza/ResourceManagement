@using Domain.Entities
@model IEnumerable<Employee>
@{ ViewBag.Title = "Funcionários"; }

<div class="container">
	<div class="row">
		<h5>
			Funcionários Cadastrados
		</h5>
		<a class="waves-effect waves-light btn" asp-controller="Employees" asp-action="Create">
			<i class="fa fa-plus" aria-hidden="true">
				Novo Funcionário
			</i>
		</a>
	</div>

	<div class="row">
		<table class="bordered">
			<thead>
				<tr>
					<th>Nome</th>
					<th>Cpf</th>
					<th>Matrícula</th>
					<th>E-mail</th>
					<th>Data de Admissão</th>
					<th>Ações</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var employee in Model) {
				<tr class="@(!employee.Active ? " danger " : " ")">
					<td>@employee.Name</td>
					<td>@employee.Cpf</td>
					<td>@employee.Identifier</td>
					<td>@employee.Email</td>
					<td>@employee.AdmissionDate.ToString("dd/MM/yyyy")</td>
					<td>
						<i class="fa fa-pencil" aria-hidden="true">
							<a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id">Editar</a>
						</i>
						<i class="fa fa-info" aria-hidden="true">
							<a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">Detalhes</a>
						</i>
					</td>
				</tr>
				}
			</tbody>
		</table>
		<div class="center-align">
			<pager />
		</div>
	</div>
</div>